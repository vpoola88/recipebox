#signup
  .signup-hero
    .user-hero
      .container
        .row
          .col.s12.center-align
            %h2 Sign Up
  .container
    .row.signupform
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.error_notification
        .col.s8.offset-s2
          .form-inputs
            = f.input :email, placeholder: "email", required: true, autofocus: true
            = f.input :password, placeholder: "password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
            = f.input :password_confirmation, placeholder: "password confirmation", required: true

          .form-actions
            = f.button :submit, "Sign up" 

            = render "devise/shared/links" 
