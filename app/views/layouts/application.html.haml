!!!
%html
  %head
    %title RecipeBox
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css", :rel => "stylesheet"}
      %link{:href => "https://fonts.googleapis.com/icon?family=Material+Icons", :rel => "stylesheet"}
  %body
    .navbar-fixed
      %nav
        .container
          .nav-wrapper
            %a.brand-logo{:href => "/"}
              %i.fa.fa-cutlery

            - if user_signed_in?
              %ul.right.hide-on-med-and-down
                %li= link_to "New Recipe", new_recipe_path, class: "btn orange darken-1"
                %li= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn orange darken-1"
            - else
              %ul.right.hide-on-med-and-down
                %li= link_to "Sign Up", new_user_registration_path, class: "btn orange darken-1"
                %li= link_to "Sign In", new_user_session_path, class: "btn orange darken-1"
              
    .container
      - flash.each do |name, msg|
        = content_tag :div, msg, class: "alert"
    = yield
